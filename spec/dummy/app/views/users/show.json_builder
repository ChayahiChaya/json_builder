id @user.id
name @user.name
email @user.email
activated @user.activated?
banned @user.disabled?
posts @user.posts do |post|
  name post.name
  user_id @user.id
  comments post.comments do |comment|
    user comment.user
    body comment.text
  end
end
urls @user.urls { |url| url }
meta do
  time = Time.now
  created_at time
  updated_at time
end
